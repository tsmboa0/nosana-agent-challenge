{
  "name": "solvestor",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy:agent": "nosana job post --file ./nos_job_def/nosana_mastra.json --market nvidia-3090 --timeout 30",
    "deploy:qwen": "nosana job post --file ./nos_job_def/qwen_nos_jb.json --market nvidia-3090 --timeout 30",
    "dev": "concurrently \"mastra dev\" \"tsx src/index.ts\"",
    "dev:mastra": "mastra dev",
    "dev:telegram": "tsx src/index.ts",
    "build": "mastra build",
    "start": "mastra start",
    "lint": "biome lint ./src",
    "format": "biome format ./src/** --write",
    "check": "biome check ./src",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "telegram:dev": "tsx src/index.ts"
  },
  "keywords": [
    "solana",
    "trading",
    "telegram",
    "ai",
    "investment"
  ],
  "author": "",
  "license": "ISC",
  "description": "AI-powered Solana investment agent with Telegram integration",
